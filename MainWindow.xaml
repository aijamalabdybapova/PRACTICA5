<Window x:Class="PRACTICA5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRACTICA5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DataGrid x:Name="AuthorizationDG"/>
        <TextBox x:Name="LoginTbx" VerticalAlignment="Center" TextChanged="LoginTbx_TextChanged" Height="54" FontSize="20"/>
        <PasswordBox x:Name="PasswordTbx" Grid.Row="1" VerticalAlignment="Center" PasswordChanged="PasswordTbx_PasswordChanged" Height="54" FontSize="20"/>
        <Button x:Name="LoginButton" Grid.Row="2" Content="Авторизоваться" Margin="0,37,0,49" FontSize="20" FontFamily="Book Antiqua" FontWeight="Bold" Background="#FF2ACBF5" Click="Button_Click"/>
    </Grid>
</Window>
