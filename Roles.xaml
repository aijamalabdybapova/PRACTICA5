<Page x:Class="PRACTICA5.Roles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRACTICA5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Roles">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Rolesdg" Background="LightSteelBlue" Grid.Row="0" SelectionChanged="Rolesdg_SelectionChanged" />
        <TextBox x:Name="RolesboxD"  Grid.Row="1" TextChanged="RolesboxD_TextChanged" />
        <Button x:Name="AddRolDS" Grid.Row="2"  Background="#FF1604F1" Content="Добавить" FontSize="17" FontFamily="Cascadia Code SemiBold" Click="AddRolDS_Click"    />
        <Button x:Name="UpdateRolDS" Grid.Row="3"  Background="#FF1604F1" Content="Изменить" FontSize="17" FontFamily="Cascadia Code SemiBold" Click="UpdateRolDS_Click"   />
        <Button x:Name="DelRolDS" Grid.Row="4"  Background="#FF1604F1" Content="Удалить" FontSize="17" FontFamily="Cascadia Code SemiBold" Click="DelRolDS_Click"   />

    </Grid>
</Page>
